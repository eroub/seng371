extends layout

block content
    p #[a(href='/') Back]&nbsp #[a(href='/user/' + id + '/allShoes') Add Shoes]&nbsp #[a(href='/user/' + id + '/notifications') Notifications]&nbsp #[a(href='/user/' + id + '/leaderboard') Leaderboard]&nbsp #[a(href='/user/' + id + '/settings') Settings]
    h1 #{username}'s Shoes:
    h3 Total Net Gain/Loss: $#{net}
    h3 Total Sunk Cost: $#{sunk}
    h3 Total Revenue: $#{total}
    h3 Number of Shoes: #{num}
    h3 Sort #[a(href='/user/' + id + '/shoes') Alphabetical]&nbsp #[a(href='/user/' + id + '/shoes/sort/current_price_high') Current Price High]&nbsp #[a(href='/user/' + id + '/shoes/sort/current_price_low') Current Price Low]&nbsp #[a(href='/user/' + id + '/shoes/sort/purchase_price_high') Purchase Price High]&nbsp #[a(href='/user/' + id + '/shoes/sort/purchase_price_low') Purchase Price Low]&nbsp
    for shoe in data
        h4 #[a(href='/user/' + id + '/shoes/' + shoe._id) #{shoe.name}]
        p Size: #{shoe.size}
        p Current market value: $#{shoe.current_price}
        p Purchase Price: $#{shoe.purchase_price}
        form(method='POST' action='/user/' + id + '/remove_shoe/' + shoe._id)
            button.btn.btn-primary(type='submit') Remove Shoe
        p ----------------------

